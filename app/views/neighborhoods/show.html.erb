



<body id="page-top" class="index">

    <!-- Navigation -->
    <nav id="mainNav" class="navbar navbar-default navbar-fixed-top navbar-custom">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
           <div class="navbar-header page-scroll">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span> Menu <i class="fa fa-bars"></i>
                </button>
                <%= link_to "SF Art Bar Crawl", neighborhoods_path, class: "navbar-brand" %>
            </div>


            <div class="navbar-header page-scroll">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span> Menu <i class="fa fa-bars"></i>
                </button>
                <!-- <a class="navbar-brand" href="#page-top">SF Art Bar Crawl</a> -->
            </div>
                <ul class="nav navbar-nav navbar-right">

                    <% @neighborhoods.each do |neighb| %>
                        <li><%= link_to neighb.name, neighborhood_path(neighb.id) %></li>
                    <% end %>

                  </ul>
            </div>
             </div>
        </nav>


    <header>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="intro-text">

                        <span class="name special-font" style="font-family: 'Amatic SC', cursive;"><%= @neighborhood.name %></span>
                        <hr class="star-light">
                        <span class="skills">San Francisco, California</span>
                        <div style="height: 20px;"></div>
                        <img class="img-responsive" src="<%= @neighborhood.image_url %>" alt="">
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="wrapper">
        <div id="<%= @neighborhood.name.downcase.gsub(" ", "-" ) %>" class="map"></div>
    </div>

    <%= render "bars", bars: @bars %>
    <%= render "art", neighborhood: @neighborhood %>


    <!-- Contact Section -->
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="special-font">Neighborhood Info</h2>
                    <hr class="star-primary">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                   <p><%= @neighborhood.description %></p>

                </div>
            </div>
        </div>
    </section>



        </div>
    </div>
<footer class="text-center">
            <div class="footer-above">
            <div class="container">
                <div class="row get-out-there">
                <h1 class="special-font" id="closing-words">Get out there, and enjoy beautiful San Francisco!</h1>

                </div>
            </div>
        </div></footer>


    <!-- jQuery -->
    <script src="vendor/jquery/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="vendor/bootstrap/js/bootstrap.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>

    <!-- Contact Form JavaScript -->
    <script src="js/jqBootstrapValidation.js"></script>
    <script src="js/contact_me.js"></script>

    <!-- Theme JavaScript -->
    <script src="js/freelancer.min.js"></script>

</body>

</html>
