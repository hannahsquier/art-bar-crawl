



<body id="page-top" class="index">

    <!-- Navigation -->
    <nav id="mainNav" class="navbar navbar-default navbar-fixed-top navbar-custom">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
           <div class="navbar-header page-scroll">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span> Menu <i class="fa fa-bars"></i>
                </button>
                <%= link_to "SF Art Bar Crawl", neighborhoods_path, class: "navbar-brand" %>
            </div>


            <div class="navbar-header page-scroll">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span> Menu <i class="fa fa-bars"></i>
                </button>
                <!-- <a class="navbar-brand" href="#page-top">SF Art Bar Crawl</a> -->
            </div>
                <ul class="nav navbar-nav navbar-right">

                     <% @neighborhoods.each do |neighb| %>
                    <li>   <%= link_to neighb.name, neighborhood_path(neighb.id) %></li>
              <% end %>

                  </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>


    <header>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="intro-text">
                        <span class="name"><%= @neighborhood.name %></span>
                        <hr class="star-light">
                        <span class="skills">San Francisco, California</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="wrapper">
        <div id="map" class=<%= @neighborhood.name.downcase.gsub(" ", "-" ) %>></div>
    </div>

    <!-- Bar Section -->
    <section id="portfolio">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>Bars</h2>
                    <hr class="star-primary">
                </div>
            </div>

      <div class="row">
          <% @bars.each do |bar| %>
            <div class="col-xs-12 col-sm-6 portfolio-item">
              <div class="row">
                <div class="col-xs-3">
                  <%= link_to bar.url, :target => "_blank" do %>
                    <%= image_tag bar.image_url, class: "img-rounded img-responsive" %>
                  <% end %>
                </div>
                <div class="col-xs-9" id="bar-info">
                  <%= link_to bar.name, bar.url, :target => "_blank" %><br>
                  Yelp Rating: <%= image_tag bar.rating_img_url %><br>
                  <% bar.categories.each_with_index do |category, index| %>
                    <%= category[0] %><%= "," unless index == bar.categories.length - 1 %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>



        </div>
    </section>

    <!-- Art in the Neighborhood -->
    <section class="success" id="about">
        <div class="container">
            <div class="row">

                <div class="col-lg-12 text-center">
                    <h2>Art in the Neighborhood</h2>
                    <hr class="star-light">
                </div>

                <% @neighborhood.arts.each do |art| %>
                    <div class="col-xs-12 col-sm-6 portfolio-item">
                        <div class="row">
                            <h3><%= art.name %> by <%= art.artist %></h3>

                            <div class="col-xs-3">
                                <% if art.image_url %>
                                    <%= image_tag art.image_url, class: "img-rounded img-responsive" %>
                                <% end %>
                                lat: <%= art.lat %>
                                lng: <%= art.lng %>
                            </div>
                        </div>


                     </div>

                <% end %>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>Neighborhood Info</h2>
                    <hr class="star-primary">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <!-- To configure the contact form email address, go to mail/contact_me.php and update the email address in the PHP file on line 19. -->
                    <!-- The form should work on most web servers, but if the form is not working you may need to configure your web server differently. -->

                </div>
            </div>
        </div>
    </section>



        </div>
    </div>

    <!-- jQuery -->
    <script src="vendor/jquery/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="vendor/bootstrap/js/bootstrap.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>

    <!-- Contact Form JavaScript -->
    <script src="js/jqBootstrapValidation.js"></script>
    <script src="js/contact_me.js"></script>

    <!-- Theme JavaScript -->
    <script src="js/freelancer.min.js"></script>

</body>

</html>
