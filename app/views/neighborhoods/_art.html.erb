<section class="success" id="about">
    <div class="container">
        <div class="row">

            <div class="col-lg-12 text-center">
                <h2 class="special-font">Art in the Neighborhood</h2>
                <hr class="star-light">
            </div>

            <% neighborhood.arts.each do |art| %>
                <div class="col-xs-12 col-sm-6 portfolio-item">
                    <div class="row">
                        <a href="<%= art.link %>"><h3><%= art.name %> </h3></a>
                        <h6>by <%= art.artist %></h6>

                        <div class="col-xs-6">
                            <% if art.image_url %>
                                <%= image_tag art.image_url, class: "img-rounded img-responsive" %>
                            <% end %>

                        </div>

                        <div class="col-xs-6">
                            <p class="art-description"><%= art.description %></p>
                        </div>
                    </div>


                 </div>

            <% end %>
        </div>
    </div>
</section>